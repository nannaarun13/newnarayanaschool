
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Simplified admin collection rules
    match /admins/{document=**} {
      allow create: if true; // Allow everyone to register for admin
      allow read, update, delete: if request.auth != null; // Only signed-in users can read/modify
    }
    
    // Admin login activities collection
    match /admin_login_activities/{document=**} {
      allow create: if true; // Allow login activity logging
      allow read: if request.auth != null; // Only signed-in users can read
      allow update, delete: if false; // Prevent modifications for audit trail integrity
    }
    
    // Default deny rule for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
