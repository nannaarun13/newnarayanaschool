
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Gallery images rules
    match /gallery/{imageId} {
      // Allow public read access for displaying images on the website
      allow read: if true;
      
      // Allow write access only for authenticated users (admins)
      allow write: if request.auth != null;
    }
    
    // Default deny rule for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
